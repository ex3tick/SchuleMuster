@model WebApp.Model.LoginTransferObjekt
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <a href="/home/index">
        <img src="/Images/ex3.jpeg" alt="Home"/>
    </a>
</div>

<form method="post" asp-action="Login">

    <div>
        <label asp-for="person.Username">Username</label>
        <input type="text" asp-for="person.Username" placeholder="Username">
        <span asp-validation-for="person.Username" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="person.Password">Password</label>
        <input type="password" asp-for="person.Password" placeholder="Password">
        <span asp-validation-for="person.Password" class="text-danger"></span>
    </div>
</form>
<div>

</div>
</body>
</html>